{% extends "base.twig" %}

{% block content %}
    <h2 class="title">{{ meta.title }}</h2>
    {{ content|replace({'(excerpt)': ''}) }}

    {% if meta.sound is defined %}
        <audio controls>
            <source src="{{ base_url }}/assets/sound/{{ meta.sound }}" type="audio/mpeg">
        </audio>
    {% endif %}

{% endblock %}
