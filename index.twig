{% extends "base.twig" %}

{% block content %}
    {{ content }}

    <div id="content">
        <div class="post">
            <h2 class="title">Latest Podcast</h2>
            <h3 class="title"><a href="{{ latestEpisode.address }}">{{ latestEpisode.title }}</a></h3>
            <div class="entry">
                <p>{{ latestEpisode.excerpt }}</p>
                <button class="more" onclick="location.href='{{ latestEpisode.address }}'">Read More</button>
            </div>
        </div>
        <div class="post">
            <h2 class="title">Latest Blog Post</h2>
            <h3 class="title"><a href="#">Coming Soon</a></h3>
            <div class="entry">
                <p>Coming Soon</p>
                <button class="more">Read More</button>
            </div>
        </div>
    </div>
{% endblock %}
